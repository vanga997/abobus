@page
@model MarriageAgencyWeb.Pages_Positions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Должность</h1>

<p>
    <a asp-page="Create">Добавить новую Должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Responsibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].Requirements)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirements)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PositionId">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.PositionId">Свойства</a> |
                <a asp-page="./Delete" asp-route-id="@item.PositionId">удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
