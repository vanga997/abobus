@page
@model MarriageAgencyWeb.Pages.RequestsAndFilters.IndexModel
@{

    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="text-decoration: none">
                        Запросы
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <a class="nav-link text-dark" asp-area="" asp-page="/RequestsAndFilters/Request/PersonnelDepartment">Отдел кадров</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/RequestsAndFilters/Request/ListOfClients">Список клиентов</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/RequestsAndFilters/Request/ListOfServices">Список услуг</a>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" style="text-decoration: none">
                        Фильтры
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                
            </div>
        </div>
    </div>
}